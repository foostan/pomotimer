{
  "name": "Pomotimer",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Pomotimer is a timer/list for pomodoro techniche.",
  "icons": {
    "48": "assets/img/icon48.png",
    "32": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  },

  "permissions": [
    "storage"
  ],

  "options_page" : "options.html",

  "background": {
    "scripts": [
      "assets/js/jquery-1.10.2.min.js",
      "assets/js/background.js"
    ]
  },

  "browser_action": {
    "default_icon": "assets/img/icon19.png",
    "default_title": "Pomotimer",
    "default_popup":"popup.html"
  }
}
